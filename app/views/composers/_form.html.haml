= form_for(@composer) do |f|
  - if @composer.errors.any?
    .alert.alert-block.alert-error
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      %h4
        = pluralize(@composer.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @composer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :english_name
    = f.text_field :english_name
  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :short_name
    = f.text_field :short_name
  .field
    = f.label :description
    = f.text_area :description, :size => "60x12"
  .field
    = f.label :date_born
    = f.text_field :date_born
  .field
    = f.label :date_died
    = f.text_field :date_died
  .actions
    = f.submit
